Popup:
    id: settings
    title: _('Settings')

    BoxLayout:

        orientation: 'vertical'

        GridLayout:
            cols: 2
            Label:
                text: _('Base unit')
                height: '48dp'
                size_hint: 1, None
            Spinner:
                text: 'LTC'
                values: ('LTC', 'mLTC')
                size_hint: 1, None
                height: '48dp'

            Label:
                size_hint: 1, None
                text: 'OpenAlias'
                height: '48dp'
            TextInput:
                size_hint: 1, None
                height: '48dp'
                multiline: False
        Button:
            size_hint: 1, None
            height: '48dp'
            text: _('Close')
            on_release: settings.dismiss()

        Widget:
            size_hint: 1, 1

